                <dataNorth>
                    <layer>250</layer>
                </dataNorth>
                <dataSouth>
                    <layer>50</layer>
                </dataSouth>
                <dataEast>
                    <layer>50</layer>
                </dataEast>
                <dataWest>
                    <layer>50</layer>
                </dataWest>
            </drawData>
        </apparel>
        <equippedStatOffsets>
            <NegotiationAbility>0.1</NegotiationAbility>
