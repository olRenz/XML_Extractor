            <tags>
                <li>Wolfein_Sundry_Staff</li>
                <li>Wolfein_Sundry_Combat</li>
            </tags>
            <defaultOutfitTags>
                <li>Worker</li>
                <li>Soldier</li>
            </defaultOutfitTags>
